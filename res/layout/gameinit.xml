<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
	android:id="@+id/relLay1"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:background="#00000000"
	xmlns:android="http://schemas.android.com/apk/res/android"> 
	
	<com.crackedcarrot.SurfaceView
		android:id="@+id/surface_view"
		android:layout_width="fill_parent" 
	    android:layout_height="wrap_content">
	</com.crackedcarrot.SurfaceView>
	
	<LinearLayout
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:gravity="bottom"
		android:background="#00000000"
        android:layout_alignParentBottom="true">
        
       	<Button
       		android:id="@+id/forward"
			android:layout_width="64dp"
			android:layout_height="50dp"
			android:scaleType="fitXY"
       		android:background="@drawable/xml_button_forward" />

       	<Button
       		android:id="@+id/play"
			android:layout_width="64dp"
			android:layout_height="50dp"
			android:scaleType="fitXY"
			android:visibility="gone"
       		android:background="@drawable/xml_button_play" />

        <Button
       		android:id="@+id/t1"
			android:layout_width="64dp"
			android:layout_height="50dp"
			android:scaleType="fitXY"
       		android:background="@drawable/t1" />
        		
        <Button
       		android:id="@+id/t2"
			android:layout_width="64dp"
			android:layout_height="50dp"
			android:scaleType="fitXY"
       		android:background="@drawable/t2" 
       	/>
        		
        <Button
       		android:id="@+id/t3"
			android:layout_width="64dp"
			android:layout_height="50dp"
			android:scaleType="fitXY"
       		android:background="@drawable/t3" />
	
        <Button
       		android:id="@+id/t4"
			android:layout_width="64dp"
			android:layout_height="50dp"
			android:scaleType="fitXY"
       		android:background="@drawable/t4" />
    
		<LinearLayout
			android:layout_width="256dp"
			android:layout_height="50dp"
			android:id="@+id/ttext"
			android:gravity="center_horizontal"
			android:background="#00000000"
	    android:visibility="gone">
	        <Button
	       		android:id="@+id/t2info"
				android:layout_width="192dp"
				android:layout_height="50dp"
				android:scaleType="fitXY"
	       		android:background="@drawable/t2_info" />

	        <Button
        		android:id="@+id/inmenu6"
				android:layout_width="64dp"
				android:layout_height="50dp"
				android:scaleType="fitXY"
        		android:background="@drawable/xml_button_game_back" />
    	
</LinearLayout><LinearLayout android:id="@+id/upgrade_layout" android:visibility="gone" android:layout_height="50dp" android:layout_width="256dp"><Button
       		android:layout_width="64dp"
			android:layout_height="50dp"
			android:scaleType="fitXY"
       		android:id="@+id/sell" android:background="@drawable/t3"/><Button
       		android:layout_width="64dp"
			android:layout_height="50dp"
			android:scaleType="fitXY"
       		android:background="@drawable/t4" android:id="@+id/upgrade_a"/><Button
       		android:layout_width="64dp"
			android:layout_height="50dp"
			android:scaleType="fitXY"
       		android:background="@drawable/t4" android:id="@+id/upgrade_b"/><Button
       		android:layout_width="64dp"
			android:layout_height="50dp"
			android:scaleType="fitXY"
       		android:background="@drawable/xml_button_game_back" android:id="@+id/close_upgrade"/>



</LinearLayout>    		

    </LinearLayout>
    
    <LinearLayout
    	android:id="@+id/status_menu"
		android:layout_width="fill_parent"
		android:layout_height="30dp"
		android:gravity="right|center_vertical"
		android:background="#00000000"
		android:visibility="invisible"
        android:layout_alignParentTop="true">

      
        <ImageView
        	android:id="@+id/coin"
			android:layout_width="20dp" 
			android:layout_height="20dp"
			android:paddingRight="3dp"
			android:src="@drawable/coin" >
		</ImageView>
		
		<TextView
			android:textColor="#000000"
			android:textStyle="bold"
			android:textSize="13sp"
			android:id="@+id/currency"
			android:paddingRight="7dp"
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content" >
		</TextView>


	    <LinearLayout
	    	android:id="@+id/healt_part"
			android:layout_width="50dp"
			android:layout_height="wrap_content"
			android:gravity="left|center_vertical"
			android:background="#00000000"
	        android:layout_alignParentTop="true">

	        <ImageView
	        	android:id="@+id/heart"
				android:layout_width="18dp" 
				android:layout_height="18dp"
				android:src="@drawable/heart" >
			</ImageView>
		
			<TextView
				android:textColor="#000000"
				android:textStyle="bold"
				android:textSize="13sp"
				android:id="@+id/playerHealth"
				android:paddingLeft="3dp"
				android:layout_width="wrap_content" 
				android:layout_height="wrap_content" >
			</TextView>

	    </LinearLayout>

	    <LinearLayout
	    	android:id="@+id/creature_part"
			android:layout_width="110dp"
			android:layout_height="wrap_content"
			android:gravity="right|center_vertical"
			android:background="#00000000"
	        android:layout_alignParentTop="true">

	        <ImageView
				android:id="@+id/enemyImVi"
				android:paddingTop="0dp"
				android:layout_width="25dp" 
				android:layout_height="25dp"
				android:src="@drawable/bunny_pink_alive" >
			</ImageView>

	        <TextView
				android:textColor="#000000"
				android:textStyle="bold"
				android:textSize="13sp"
				android:id="@+id/nrEnemyLeft"
				android:gravity="right"
	        	android:paddingRight="2dp"
				android:layout_width="18dp" 
				android:layout_height="wrap_content" >
			</TextView>
					        
	        <ProgressBar 
	        	android:id="@+android:id/health_progress"
	        	android:progressDrawable="@drawable/xml_healthbar"
	        	android:layout_width="wrap_content"
	        	android:layout_height="wrap_content"
	        	style="?android:attr/progressBarStyleHorizontal"
	        	android:paddingRight="5dp"
	        	android:paddingLeft="2dp" />

			
	    </LinearLayout>
	    <LinearLayout
	    	android:id="@+id/counter"
			android:layout_width="110dp"
			android:layout_height="wrap_content"
			android:gravity="left|center_vertical"
			android:background="#00000000"
			android:visibility="gone"
	        android:layout_alignParentTop="true">

	        <TextView
				android:textColor="#000000"
				android:textStyle="bold"
				android:textSize="13sp"
				android:id="@+id/countertext"
	        	android:paddingLeft="12dp"
				android:layout_width="wrap_content" 
				android:layout_height="wrap_content" >
			</TextView>
			
	    </LinearLayout>	    

    </LinearLayout>
  
</RelativeLayout>
