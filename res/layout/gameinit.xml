<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
	android:id="@+id/relLay1"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:background="#00000000"
	xmlns:android="http://schemas.android.com/apk/res/android"> 
	
	<android.opengl.GLSurfaceView
		android:id="@+id/surface_view"
		android:layout_width="fill_parent" 
	    android:layout_height="wrap_content">
	</android.opengl.GLSurfaceView>
	
	<com.crackedcarrot.ExpandMenu
    	android:id="@+id/expand_menu"
    	android:orientation="horizontal"
		android:layout_width="fill_parent"
		android:layout_height="120dp"
		android:background="#66000044"
		android:visibility="gone"
		android:layout_alignParentBottom="true">
		<!--  app:speed="250"
		app:targetHeight="75px" -->
		
		<Button
        	android:id="@+id/inmenu6"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:layout_marginRight="7dp"
        	android:layout_marginLeft="7dp"
        	android:background="@drawable/inmenu6_button" />
		
	</com.crackedcarrot.ExpandMenu>
	
	<LinearLayout
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:gravity="bottom"
		android:background="#66000088"
        android:layout_alignParentBottom="true">
        
        
        <Button
        		android:id="@+id/inmenu1"
        		android:layout_width="wrap_content"
        		android:layout_height="wrap_content"
        		android:layout_marginRight="7dp"
        		android:layout_marginLeft="7dp"
        		android:background="@drawable/inmenu1_button" />
        		
        <Button
        		android:id="@+id/inmenu2"
        		android:layout_width="wrap_content"
        		android:layout_height="wrap_content"
        		android:layout_marginRight="7dp"
        		android:layout_marginLeft="7dp"
        		android:background="@drawable/inmenu2_button" />
        		
        <Button
        		android:id="@+id/inmenu3"
        		android:layout_width="wrap_content"
        		android:layout_height="wrap_content"
        		android:layout_marginRight="7dp"
        		android:layout_marginLeft="7dp"
        		android:background="@drawable/inmenu3_button" />
        		
        <Button
        		android:id="@+id/inmenu4"
        		android:layout_width="wrap_content"
        		android:layout_height="wrap_content"
        		android:layout_marginRight="7dp"
        		android:layout_marginLeft="7dp"
        		android:background="@drawable/inmenu4_button" />
        		
        <Button
        		android:id="@+id/inmenu5"
        		android:layout_width="wrap_content"
        		android:layout_height="wrap_content"
        		android:layout_marginRight="7dp"
        		android:layout_marginLeft="7dp"
        		android:background="@drawable/inmenu5_button" />
        		
    </LinearLayout>
    
    <LinearLayout
    	android:id="@+id/status_menu"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:gravity="right"
		android:background="#00000000"
        android:layout_alignParentTop="true">
        
        <com.crackedcarrot.NrCreTextView
			android:textColor="#000000"
			android:textStyle="bold"
			android:textSize="15sp"
			android:id="@+id/nrEnemyLeft"
			android:paddingTop="5dp" 
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content" >
		</com.crackedcarrot.NrCreTextView>
        
        <com.crackedcarrot.HealthProgressBar 
        	android:id="@+android:id/health_progress"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	style="?android:attr/progressBarStyleHorizontal"
        	android:paddingRight="5dp"
        	android:paddingTop="5dp"
        	android:paddingLeft="5dp" />

        
    </LinearLayout>
  
</RelativeLayout>
