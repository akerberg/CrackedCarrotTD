<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:background="@drawable/backgradient">

    <ImageView
        android:id="@+id/switcher1" 
        android:layout_width="fill_parent" 
        android:layout_height="fill_parent"
        android:background="#00000000"      
    	android:scaleType="fitXY"
        />

    <Gallery
       android:id="@+id/gallery1"
       android:layout_width="fill_parent" 
       android:layout_height="wrap_content" />

	<TableLayout
		android:layout_centerHorizontal="true"
		android:layout_centerVertical="true"
		android:layout_height="wrap_content"
		android:gravity="center"
		android:layout_width="300dp"
		>
		
	    <TableRow>
	        <TextView android:text="Map 1: The field of grass."
				android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:gravity="center"
	            android:textStyle="bold"
				android:textSize="15sp"
	            android:textColor="#000000"
				android:id="@+id/maptext" ></TextView>
	    </TableRow>

	    <TableRow>
			<View android:layout_height="30dip" />
		</TableRow>
		
	    <TableRow>
	        <TextView android:text="How brave are you?"
				android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:gravity="center"
	            android:textStyle="bold"
				android:textSize="20sp"
	            android:textColor="#000000"
				android:id="@+id/difficultyText" />
	    </TableRow>
	    <TableRow>
			<View android:layout_height="10dip" />
		</TableRow>
		
		<TableRow>
	    	<TableLayout>
	    		<TableRow android:gravity="center">
					<ImageView
						android:id="@+id/StartGameImageViewEasy"
						android:gravity="center"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
		        		android:layout_weight="1"
		        		android:src="@drawable/level_easy" />
	
			        <ImageView
						android:id="@+id/StartGameImageViewNormal"
	        			android:gravity="center"
	        			android:layout_width="wrap_content"
	    	    		android:layout_height="wrap_content"
		        		android:layout_weight="1"
		        		android:src="@drawable/level_normal" />
	        		
	        		<ImageView
						android:id="@+id/StartGameImageViewHard"
						android:gravity="center"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
	        			android:layout_weight="1"
	        			android:src="@drawable/level_hard" />
	        	</TableRow>
	        	
	    		<TableRow android:gravity="center">
					<TextView
						android:text="Easy"
						android:textColor="#000000"
						android:textStyle="bold"
						android:layout_gravity="center"
						android:gravity="center" />
	
					<TextView
						android:text="Normal"
						android:textColor="#000000"
						android:textStyle="bold"
						android:layout_gravity="center"
						android:gravity="center"
						android:layout_marginLeft="27dp"
						android:layout_marginRight="27dp"/>
	        		
					<TextView
						android:text="Hard"
						android:textColor="#000000"
						android:textStyle="bold"
						android:layout_gravity="center"
						android:gravity="center" />
	        	</TableRow>
			</TableLayout>
		</TableRow>
	
	</TableLayout>

</RelativeLayout>