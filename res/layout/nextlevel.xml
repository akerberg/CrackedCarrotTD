<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/layout_root"
              android:padding="10dp"
              android:orientation="vertical" 
              android:minHeight="400dp" 
              android:minWidth="260dp" 
              android:layout_width="260dp" android:layout_height="400dp">


	<TableLayout android:id="@+id/layout_root"                
	    android:layout_width="fill_parent" 
	    android:layout_height="fill_parent">
   
		<TableRow android:id="@+id/TableRow01" 
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content">
	
				<LinearLayout 
	    		android:layout_width="240dp" 
				>
			
			    	<TextView android:id="@+id/NextLevelTitle"
						android:layout_width="170dp"
						android:textColor="#000"
						android:typeface="serif"
						android:textSize="20dip"
						android:text="Next Level Title!" 
						android:layout_height="wrap_content"/>
				
					<ImageView android:id="@+id/NextLevelImage"
							android:layout_width="70dp"
							android:layout_height="70dp"
							android:scaleType="fitXY"
							android:src="@drawable/bunny_pink_alive"  
							/>
			</LinearLayout>
		</TableRow>

		<TableRow 
			android:id="@+id/TableRow02" 
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content"
			android:layout_span="2"
			>
			<TextView android:id="@+id/NextLevelText"
				android:layout_width="fill_parent"
				android:textColor="#000"
				android:typeface="serif"
				android:textSize="16dip"
				android:text="Next level information goes here." android:layout_height="250dp"/>                  
		</TableRow>
      
		<TableRow 
			android:id="@+id/TableRow02" 
			android:layout_height="fill_parent"
			android:layout_width="200dp"
			android:layout_span="2"
			>
			<LinearLayout
				android:layout_width="wrap_content"
				android:layout_height="fill_parent">
			<Button
        		android:id="@+id/infobutton2"
        		android:layout_width="40dp"
        		android:layout_height="40dp"
        		android:layout_gravity="bottom|left"
        		android:layout_marginRight="20dp"
        		android:background="@drawable/info" />
			
		    <Button	android:id="@+id/NextLevelButton"
				android:layout_width="wrap_content"
				android:background="@drawable/startgame_button" 
				android:layout_height="wrap_content"
				android:layout_gravity="bottom|right">
			</Button>
			</LinearLayout>
		</TableRow>
</TableLayout>
</LinearLayout>