<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
	android:id="@+id/relLay1"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:background="@drawable/mainmenu"
	xmlns:android="http://schemas.android.com/apk/res/android">

  <TableLayout
	android:layout_width="140dp"
    android:layout_height="460dp"
    android:gravity="center"
	android:layout_alignParentTop="true"
	android:layout_centerHorizontal="true"
	android:paddingTop="0dp"
	android:background="#00000000">
	/** the first two hex digits, represent
    the alpha channel which is used to define 
    opacity. */
    
    <TableRow>
        <Button
		android:id="@+id/StartGame"
		android:layout_width="66dp"
		android:layout_height="38dp"
	    android:scaleType="fitXY"
		android:background="@drawable/xml_button_startgame">
		</Button>
    </TableRow>

	<TableRow>
		<View
        	android:layout_height="15dp"
        	android:layout_width="wrap_content"
        	android:background="#00000000" />
	</TableRow>
	
    <TableRow>
        <Button
		android:id="@+id/Options"
		android:layout_width="66dp"
		android:layout_height="38dp"
	    android:scaleType="fitXY"
		android:background="@drawable/xml_button_options">
		</Button>
    </TableRow>

	<TableRow>
		<View
        	android:layout_height="15dp"
        	android:layout_width="wrap_content"
        	android:background="#00000000" />
	</TableRow>

    <TableRow>
        <Button
		android:id="@+id/Help"
		android:layout_width="66dp"
		android:layout_height="38dp"
	    android:scaleType="fitXY"
		android:background="@drawable/xml_button_help">
		</Button>
    </TableRow>

	<TableRow>
		<View
        	android:layout_height="15dip"
        	android:layout_width="wrap_content"
        	android:background="#00000000" />
	</TableRow>

    <TableRow>
        <Button
		android:id="@+id/Multiplayer"
		android:layout_width="66dp"
		android:layout_height="38dp"
	    android:scaleType="fitXY"
		android:background="@drawable/xml_button_multiplayer">
		</Button>
    </TableRow>

	<TableRow>
		<View
        	android:layout_height="15dp"
        	android:layout_width="wrap_content"
        	android:background="#00000000" />
	</TableRow>

    <TableRow>
        <Button
		android:id="@+id/ButtonHighscore"
		android:layout_width="66dp"
		android:layout_height="38dp"
	    android:scaleType="fitXY"
		android:background="@drawable/xml_button_highscore">
		</Button>
    </TableRow>

  </TableLayout>
</RelativeLayout>
